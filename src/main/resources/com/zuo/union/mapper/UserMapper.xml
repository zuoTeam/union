<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zuo.union.UserMapper">

	<!-- 用户登录 -->
	<select id="login" parameterMap="loginParams" resultMap="userResultMap">
		select user_name,user_pass,type_id where user_name=${userName} user_pass=${userPass}
	</select>
	<!-- 用户登录参数映射 -->
	<parameterMap type="java.util.Map" id="loginParams">
		<parameter property="userName" javaType="string"/>
		<parameter property="userPass" javaType="string"/>
	</parameterMap>



</mapper>
